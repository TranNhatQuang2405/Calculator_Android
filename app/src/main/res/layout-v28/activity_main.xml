<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5A5757"
    tools:context=".MainActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:minHeight="100dp"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textFontWeight="80"
            android:textSize="60sp"
            tools:ignore="SpeakableTextPresentCheck"
            android:importantForAutofill="no" />
        <TableRow android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            >
            <Button android:text="@string/N_7"
                android:id="@+id/N7"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="40sp"
                app:backgroundTint="@null"
                android:textColor="@color/black"
                android:background="@drawable/shape_cell"
                style="?android:attr/buttonBarButtonStyle" />
            <Button android:text="@string/N_8"
                android:id="@+id/N8"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="40sp"
                app:backgroundTint="@null"
                android:textColor="@color/black"
                android:background="@drawable/shape_cell"

                style="?android:attr/buttonBarButtonStyle" />
            <Button android:text="@string/N_9"
                android:id="@+id/N9"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="40sp"
                app:backgroundTint="@null"
                android:textColor="@color/black"
                android:background="@drawable/shape_cell"

                style="?android:attr/buttonBarButtonStyle" />
            <Button android:text="@string/N_div"
                android:id="@+id/N_div"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="40sp"
                app:backgroundTint="@null"
                android:textColor="@color/black"
                android:background="@drawable/shape_cell_spec"

                style="?android:attr/buttonBarButtonStyle" />


        </TableRow>
        <TableRow android:layout_height="fill_parent"
            android:layout_width="fill_parent">
            <Button android:text="@string/N_4"
                android:id="@+id/N4"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="40sp"
                app:backgroundTint="@null"
                android:textColor="@color/black"
                android:background="@drawable/shape_cell"
                style="?android:attr/buttonBarButtonStyle" />
            <Button android:text="@string/N_5"
                android:id="@+id/N5"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="40sp"
                app:backgroundTint="@null"
                android:textColor="@color/black"
                android:background="@drawable/shape_cell"

                style="?android:attr/buttonBarButtonStyle" />
            <Button android:text="@string/N_6"
                android:id="@+id/N6"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="40sp"
                app:backgroundTint="@null"
                android:textColor="@color/black"
                android:background="@drawable/shape_cell"

                style="?android:attr/buttonBarButtonStyle" />
            <Button android:text="@string/N_x"
                android:id="@+id/N_mul"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="40sp"
                app:backgroundTint="@null"
                android:textColor="@color/black"
                android:background="@drawable/shape_cell_spec"

                style="?android:attr/buttonBarButtonStyle" />

        </TableRow>
        <TableRow android:layout_height="fill_parent"
            android:layout_width="fill_parent">
            <Button android:text="@string/N_1"
                android:id="@+id/N1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="40sp"
                app:backgroundTint="@null"
                android:textColor="@color/black"
                android:background="@drawable/shape_cell"
                style="?android:attr/buttonBarButtonStyle" />
            <Button android:text="@string/N_2"
                android:id="@+id/N2"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="40sp"
                app:backgroundTint="@null"
                android:textColor="@color/black"
                android:background="@drawable/shape_cell"

                style="?android:attr/buttonBarButtonStyle" />
            <Button android:text="@string/N_3"
                android:id="@+id/N3"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="40sp"
                app:backgroundTint="@null"
                android:textColor="@color/black"
                android:background="@drawable/shape_cell"

                style="?android:attr/buttonBarButtonStyle" />
            <Button android:text="@string/N_sub"
                android:id="@+id/N_sub"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="40sp"
                app:backgroundTint="@null"
                android:textColor="@color/black"
                android:background="@drawable/shape_cell_spec"
                style="?android:attr/buttonBarButtonStyle" />
        </TableRow>
        <TableRow android:layout_height="fill_parent"
            android:layout_width="fill_parent">
            <Button android:text="@string/N_0"
                android:id="@+id/N0"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="40sp"
                app:backgroundTint="@null"
                android:layout_span="2"
                android:textColor="@color/black"
                android:background="@drawable/shape_cell"
                style="?android:attr/buttonBarButtonStyle" />
            <Button android:text="@string/N_dot"
                android:id="@+id/N_dot"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="40sp"
                app:backgroundTint="@null"
                android:textColor="@color/black"
                android:background="@drawable/shape_cell"
                style="?android:attr/buttonBarButtonStyle" />
            <Button android:text="@string/N_sum"
                android:id="@+id/N_sum"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="40sp"
                app:backgroundTint="@null"
                android:textColor="@color/black"
                android:background="@drawable/shape_cell_spec"
                style="?android:attr/buttonBarButtonStyle" />

        </TableRow>
        <TableRow android:layout_height="fill_parent"
            android:layout_width="fill_parent">
            <Button android:text="@string/N_C"
                android:id="@+id/NC"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="40sp"
                app:backgroundTint="@null"
                android:layout_span="2"
                android:textColor="@color/black"
                android:background="@drawable/shape_cell_spec"
                style="?android:attr/buttonBarButtonStyle" />
            <Button android:text="@string/N_equal"
                android:id="@+id/N_equal"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_span="2"
                android:textSize="40sp"
                app:backgroundTint="@null"
                android:textColor="@color/black"
                android:background="@drawable/shape_cell_spec"
                style="?android:attr/buttonBarButtonStyle" />


        </TableRow>
    </TableLayout>



</androidx.constraintlayout.widget.ConstraintLayout>