            <Button android:text="@string/N_0"
                android:id="@+id/N0"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="40sp"
                app:backgroundTint="@null"
                android:layout_span="2"
                android:textColor="@color/black"
